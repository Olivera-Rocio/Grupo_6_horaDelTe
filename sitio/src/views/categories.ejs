<!DOCTYPE html>
<html lang="es">

<%- include("partials/head",{title: 'Hora del té' }) %>

    <!---header-->

    <%- include("partials/header") %>

        <!---header-->

        <body class="home">
            <main>

                <div class="contenedor">
                    <h3>Categorias</h3>
                    <div class="category">
                        <div class="box">
                            <a href="/products/category/1">
                                <img src="/img/portada-tazaFrase.jpg">
                                <div class="capa">
                                    <h2>"Tazas con frase"</h2>
                                </div>
                            </a>
                        </div>

                        <div class="box">
                            <a href="/products/category/2">
                                <img src="/img/portada-tazaCeramica.jpg">
                                <div class="capa">
                                    <h2>"Tazas de cerámica"</h2>
                                </div>
                            </a>
                        </div>

                        <div class="box">
                            <a href="/products/category/3">
                                <img src="/img/portada-teteras.jpg">
                                <div class="capa">
                                    <h2>"Teteras"</h2>
                                </div>
                            </a>

                        </div>

                        <div class="box">
                            <a href="/products/category/4">
                                <img src="/img/portada-azucarera.jpg">
                                <div class="capa">
                                    <h2>"Azucareras"</h2>
                                </div>
                            </a>
                        </div>

                    </div>
                </div>

                <section>
                    <h1>
                        <%= category.name%>
                    </h1>

                    <% category.products.forEach(product=> { %>
                        <article class="product-card">
                            <img src="/img/products/<%= product.image %>" width="100%" alt="">
                            <div class="detail-product">
                                <div class="box-botones">
                                    <a href="/products/cart" class="myButton1"><i class="fas fa-shopping-cart"></i>
                                        Añadir al carrito</a>
                                    <a href="/products/detail/<%= product.id %>" class="myButton2">Ver Mas</a>
                                </div>
                                <h4>
                                    <%= product.name %>
                                </h4>
                                <div class="contenedor-precio-descuento">
                                    <% if (product.discount> 0) { %>
                                        <p class="precio">
                                            <span class="precio">$<%= toThousand(product.price) %></span>
                                            <br>
                                            <b>
                                                <%= product.discount %>% OFF
                                            </b>
                                        </p>
                                        <p class="precio-total">
                                            $<%= toDiscount(product.price, product.discount) %>
                                        </p>
                                        <% }else{%>
                                            <p class="precio-real">
                                                $<%= toThousand(product.price) %>
                                            </p>
                                            <% } %>
                                </div>
                            </div>
                        </article>
                        <% }) %>


                </section>
            </main>

            <%- include('partials/footer') %>

        </body>

</html>