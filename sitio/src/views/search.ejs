<!DOCTYPE html>
<html lang="es">

<%- include("partials/head",{title: 'Hora del té' }) %>

    <!---header-->

    <%- include("partials/header") %>

        <!---header-->

        <body class="home">
            
            <main>

                <section>
                        <h1>Resultados de la búsqueda: "<%= keywords %>" </h1>
                    <% if (products.length> 0) { %>
                        <% products.forEach(product=> { %>
                            <article class="product-card">
                                    <a href="/products/detail/<%= product.id %>">
                                        <img src="/img/products/<%= product.image %>" width="100%" alt="">
                                        <div class="detail-product">
                                            <div class="box-botones">
                                                <a href="/products/cart" class="myButton1"><i class="fas fa-shopping-cart"></i> Añadir al carrito</a>
                                                <a href="/products/detail/<%= product.id %>" class="myButton2">Ver Mas</a>
                                            </div>
                                            <h4>
                                                <%= product.name %>
                                            </h4>
                                            <div class="contenedor-precio-descuento">
                                                <% if (product.discount> 0) { %>
                                                    <p class="precio">
                                                        <span class="precio">$<%= toThousand(product.price) %></span>
                                                        <br>
                                                        <b>
                                                            <%= product.discount %>% OFF
                                                        </b>
                                                    </p>
                                                    <p class="precio-total">
                                                       $<%= toDiscount(product.price, product.discount) %>
                                                    </p>
                                                    <% }else{%>
                                                        <p class="precio-real">
                                                           $<%= toThousand(product.price) %>
                                                        </p>
                                                        <% } %>
                                            </div>
                                        </div>
                                    </a>
                            </article>

                            <% }) %>
                                <% }else { %>
                                    <div class="col-12">
                                        <h2 class="products-title" style="color: tomato;">No hay productos que coincidan
                                            con esa búsqueda</h2>
                                    </div>
                                    <% } %>

                </section>                    

            </main>                           
            <%- include('partials/footer') %>

        </body>

</html>