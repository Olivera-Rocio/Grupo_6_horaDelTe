<header>
    <div class="caja-superior">
        <a href="/"><img src="/img/Logo.png" alt=""></a>
        <div class="search">
            <form action="/search" method="GET">
            <input name="keywords" placeholder=" Buscar... " type="text">
            <button class="search-form_button"type="submit"><i class="fas fa-search"></i></button>
        </form>
        </div>
        <nav>
            <ul class="navbar">
                <li><a href="/">Inicio</a></li>
                <li><a href="/products">Productos</a></li>
                <li><a href="">Preguntas frecuentes</a></li>
                <li><a href="/products/cart"><i class="fas fa-shopping-cart"></i></a>
            </ul>

            <ul class="login-bar">
                <% if (locals.userLogin) { %>
                    <li >
                        <a class="perfil" href="#">
                            <div class="container-perfil">
                                <div class="img-perfil">
                                    <img src="/img/users/<%= locals.userLogin.avatar %>" alt="">
                                </div>


                                <%= locals.userLogin.name %>

                                    <i class="fas fa-caret-down"></i>
                            </div>
                            <ul class="sub-menu">
                            <li>
                                <a href="/users/profile"><i class="fas fa-user-alt"></i>Mi perfil</a>
                            </li>
                            <% if (locals.userLogin.rol === 2 ) { %>
                                <li><a href="/admin"><i class="far fa-user-circle"></i> Administrador </a>
                                    <% } %>
                                <li>
                                    <a href="/users/logout"><i class="fas fa-sign-out-alt"></i>Cerrar sesión</a>
                                </li>
                        </ul>

                        </a>
                        
                    </li>
                <% } else { %>
                        <li><a href="/users/register"><i class="far fa-id-card"></i> Registrate </a>
                        <li><a href="/users/login"><i class="fas fa-user-circle"></i> Iniciar sesión </a>
                <% } %>

            </ul>

        </nav>
    </div>
    <div class="caja-inferior">
        <div class="burger-menu">
            <i class="fas fa-bars"></i>
        </div>
    </div>
</header>